<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff00b0f0" >

    <ImageView
        android:id="@+id/StartScreeenLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/applogo_start" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:id="@+id/AppTitle"
        android:layout_below="@+id/StartScreeenLogo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="MoneyManager"
        android:textStyle="bold|italic"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoadingBar00"
        android:layout_below="@+id/AppTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/spinner00" />
        android:layout_marginTop="80dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoadingBar75"
        android:layout_below="@+id/AppTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/spinner75" />
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Created in BetaHouse" />

</RelativeLayout>